<h1>Log in!</h1>

<div class="container">
    <div class="row justify-content-center text-center">
        <div class=col-8>
            <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info") do |form| %>

              <div class="form-group row">
                <%= form.label :email, class: "col-1 col-form-label text-light" %>
                <%= form.email_field :email, class: "form-control shadow text-light", placeholder: "Your email" %>
              </div>

              <div class="form-group row">
                <%= form.label :password, class: "col-1 col-form-label text-light" %>
                <%= form.password_field :password, class: "form-control shadow text-light", placeholder: "Your password"  %>
              </div>

              <div>
                <%= form.submit "Log in!", class: "btn btn-md btn-form" %>
              </div>
            <% end %>
        </div>
        <%= link_to 'Cancel and return to home page', root_path, class: "text-muted" %>
    </div>
</div> 

