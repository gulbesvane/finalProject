<%= form_with(model: [ collab, collab.messages.build ], class: "shadow p-3 mb-3 bg-info") do |form| %>
<% if !parent.nil? %>
  <input type="hidden" name="message[parent_id]" value ="<%= parent.id %>">
<% end %>
<div class="form-group">
  <%= form.text_area :content, class: "form-control shadow text-light"%>
  <%= form.submit "Send message", class: "btn btn-md btn-form"%>
</div>
<% end %>