<div class="container">
    <% @collabs.each do |collab| %>
        <div class="row justify-content-center">
            <div class="col-md-8 mt-4">
                <div class="card text-center shadow mb-5">
                  <div class="card-header">
                    by <%= link_to user collab.owner, user_path(collab.owner) %>
                <div class="card-body">
                    <div class="imgContainer">
                      <% if collab.image.attached? %>
                        <%= image_tag collab.image, class: "card-img-top full-img" %>
                      <% else %>
                        <%= image_tag "default_profile.png", class: "card-img-top full-img" %>
                      <% end %>
                      <div class="overlay"></div>
                    </div>
                    <h5 class="card-title mt-2"><%= collab.title %></h5>
                    <p class="card-text"><%= truncate(collab.body, length:100) %></p>
                    <%= link_to "View", collab_path(collab), class: "btn btn-outline-light btn-md" %>
                    <% if logged_in? && (collab.owner == current_user.id || current_user.admin?) %>
                      <%= link_to "Edit", edit_collab_path(collab), class: "btn btn-outline-light btn-md" %>
                      <%= button_to 'DELETE', collab_path(collab),class: "btn btn-outline-light btn-md", method: :delete %>
                    <% end %> 
                </div>
                </div>
            </div>
        </div>
    <%end%>
</div>

